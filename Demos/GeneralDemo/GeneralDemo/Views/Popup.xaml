<UserControl x:Class="GeneralDemo.Views.Popup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:m="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
       <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <!--<TextBox m:TextboxHelper.Watermark="enter your name" m:TextboxHelper.ClearTextButton="True"  Grid.Row="0" Text="{Binding FullName, Mode=TwoWay}" />-->
        <TextBox Grid.Row="0" Text="{Binding FullName, Mode=TwoWay}" />
        <Button Grid.Row="2" Content="Click to say hi" x:Name="ShowName"/>
        <Button Grid.Row="4" Content="Click to say goodbye" x:Name="SayGoodbye"/>
        <Button Grid.Row="6" Content="Back" x:Name="GoToMenu"/>
    </Grid>
</UserControl>
